<%# binding.pry%>
<%= form_with model: [:admin, @badge], local: true do |form| %>

    <%= render 'shared/errors', resource: @badge %>
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title, id: :badge_title %>
    </p>

    <p>
      <%= form.label :reward_link %><br>
      <%= form.text_field :reward_link, id: :badge_reward_link %>
    </p>
    <p>
      <%= form.label :rule_id %><br>
      <%= form.collection_select :rule_id, Rule.all, :id, :title, prompt: true %>


    <p><%= form.submit %></p>

<% end %>