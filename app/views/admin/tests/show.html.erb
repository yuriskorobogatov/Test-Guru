<p>
  <strong><%= t('.title')%>:</strong>
  <%= @test.title %>
</p>

<p>
  <strong><%= t('.level')%>:</strong>
  <%= @test.level %>
</p>

<p>
  <strong><%= t('.category')%>:</strong>
  <%= Category.where(id: @test.category_id).pluck(:title)[0] %>
  
</p>

<p>
  <strong><%= t('.author')%>:</strong>
  <%= User.where(id: @test.user_id).pluck(:login)[0] %>
</p>

<p>
  <%= link_to "#{t('.new_question')}", new_admin_test_question_path(@test.id) %>
</p>

<p><%= link_to "#{t('.back')}", admin_tests_path %></p>
<p><%= link_to "#{t('.edit')}", edit_admin_test_path(@test) %></p>

<table class='table'>
  <tr >
    <th><%= t('.question_id') %></th>
    <th><%= t('.body') %></th>
    <th><%= t('.test_id') %></th>
    <th colspan="3"><%= t('.actions') %></th>
  </tr>
  
<%= render partial: '/admin/questions/question', collection: @test.questions %>

</table>