<h1>Hello!</h1>

<div>
  <%= form_for @contact_form do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true %>

    <br>

    <%= f.label :email %><br>
    <%= f.email_field :email, required: true %>

    <br>

    <%= f.label :message %><br>
    <%= f.text_area :message, as: :text %>

    <br>

    <%= f.submit "#{t('.send_message')}", class: "button" %>
  <% end %>
</div>